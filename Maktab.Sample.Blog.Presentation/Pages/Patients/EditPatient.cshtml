@page
@model Maktab.Sample.Blog.Presentation.Pages.Patients.EditPatientModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_UserLayout";
}

<form method="post" asp-page-handler="Update">

    <div class="mb-3">
        <label asp-for="UpdatePatientModel.NationalCode" class="form-label">National Code</label>
        <input asp-for="UpdatePatientModel.NationalCode" class="form-control" id="nationalCodeInput">
        <span asp-validation-for="UpdatePatientModel.NationalCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UpdatePatientModel.PatientDescription" class="form-label">Patient Description </label>
        <input asp-for="UpdatePatientModel.PatientDescription" class="form-control" id="patientDescriptionInput">
        <span asp-validation-for="UpdatePatientModel.PatientDescription" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UpdatePatientModel.InsuranceName" class="form-label">Insurance Name </label>
        <input asp-for="UpdatePatientModel.InsuranceName" class="form-control" id="insuranceNameInput">
        <span asp-validation-for="UpdatePatientModel.InsuranceName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UpdatePatientModel.IsuranceDescription" class="form-label">Insurance Description </label>
        <input asp-for="UpdatePatientModel.IsuranceDescription" class="form-control" id="insuranceDescriptionInput">
        <span asp-validation-for="UpdatePatientModel.IsuranceDescription" class="text-danger"></span>
    </div>

    <div class="mb-3 d-none">
        <input asp-for="UpdatePatientModel.Id" class="form-control" id="postIdInput">
    </div>
    <button type="submit" class="btn btn-outline-info">Update</button>
    <a class="btn btn-outline-secondary" asp-page="Index">Cancel</a>

</form>